<link rel="stylesheet" type="text/css" href="../../public/css/Mystyle.css">
<body class="background">
    <div class="container">
        <form action="/posts/create" method="post" enctype="multipart/form-data">
            <h2>Post Image</h2>
            <div class="form-group">
                <label for="title">Enter title:</label>
                <input class="form-control" type="text" name="title" id="title" placeholder="Title of your post" required>   
            </div>
            <div class="form-group">
                <label for="description">Enter description: </label> 
                <input class="form-control" type="text" name="description" id="description" placeholder="Description of your post" required>    
            </div>
            <div class="form-group">
                <label for="image">Upload image:</label>
                <input class="form-control" type="file" name="uploadImage" id="image" accept="image/*" required multiple>
            </div>
            <div class="form-group">
                <input type="checkbox" name="accept" id="accept" required> I hereby agree to the <a href="">Acceptable Use Policy </a> for uploading images
            </div>
            <br>
            <button class="submit-button">Submit</button>
        </form> 
</body>


