<main id="main-content">
{{#each results}} 
{{!-- {{log this}} --}}
{{!-- "this" referes to each element in the results array. each row will contain the items bellow--}}
    <div>
        <img src="/{{this.thumbnail}}" > {{!-- without adding the front slash in front the pathing gets appended to current route instead of starting at root--}}
        <p>{{this.title}}</p>
        <p>{{this.description}}</p>
        <a href="/posts/{{this.id}}">Details</a>
    </div>
{{/each}}
</main>


